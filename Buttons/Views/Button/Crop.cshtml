@model ButtonViewModel
@{
    Layout = "_LayoutPhone";
    ViewData["Title"] = "Crop the Button";
}

@section Scripts
{
    <script src="~/lib/cropperjs/cropper.min.js" type="text/javascript"></script>
    <script src="~/js/crop.js" asp-append-version="true" type="text/javascript"></script>
}

<form id="crop-form" method="post" asp-action="Crop" asp-route-id="@Model.Id" class="flex-container">
    <partial name="_CropFields.cshtml" for="Crop" />
    <div class="file-box">
        <div class="filled"><img id="crop-image" src="~/buttons/@Model.Path" /></div>
    </div>
    <button type="button" id="crop-reset">Reset</button>
    <button type="submit">Next</button>
</form>
